@model User
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div class=" text-danger small" role="alert">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="form-group my-2 mb-3">
                <label class = "form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="johndoe" type="text" />
            </div>
            <div class="form-group my-2 mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="P@ssW0rd!" type="password" />
            </div>
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary mb-3">Login</button>
                <a class="btn btn-primary" asp-controller="Register" asp-action="Register">Register</a>
            </div>


        </form>

    </div>
</div>


