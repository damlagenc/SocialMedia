@model IEnumerable<User>
@if (Model.Count() > 0)
{
    <h5 class="display-5">
    Users(@Model.Count())
</h5>
    <table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Registered At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.RegisterAt</td>
            </tr>

        }
    </tbody>

</table>
}
else
{
    <div class="alert alert-info">
    There is no user. Please click here to
    <a class="alert-link" asp-action="Register">register.</a>

</div>
}