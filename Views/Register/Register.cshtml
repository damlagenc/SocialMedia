@model User

<div class="display-6">
    Register
</div>

<form method="post" asp-action="Register">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="text"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group my-2">
        <label asp-for="UserName" >User Name</label>
        <input asp-for="UserName" class="form-control" type="text"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    
    <div class="form-group my-2">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" type="text"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" type="text"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    
    <div class="form-group my-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="text"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div>
        <button type="submit" class="btn btn-primary">Register</button>
        <a class="btn btn-primary" asp-controller="Login" asp-action="Login">Login</a>
    </div>
</form>
